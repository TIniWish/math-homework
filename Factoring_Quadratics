#include <iostream>
#include <cmath>

int * find(int a, int b, int c, int range) {
    for (int i = -range; i <= range; ++i) {
        for (int j = -range; j <= range; j++) {
            if (i * j == c && a * j + i == b) {
                static int ans[2] = {i, j};
                return ans;
            }
        }
    }
}

void print_ans(int * ans, int a) {
    std::cout <<"(" << a << std::showpos << "x" << ans[0] << ")(x" << ans[1] << ")" << std::endl;
}


int main() {
    int a, b, c, range = 1000;
    std::cin >> a >> b >> c;
    int * ans = find(a, b, c, range);
    print_ans(ans, a);
    return 0;
}
